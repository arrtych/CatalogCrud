@model CatalogCRUD.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    
    <hr />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>View Book <span class="bookName-edit badge">@Model.Name</span></h4>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Name: 
                        </dt>
                        <dd>
                            @Model.Name
                        </dd>
                        <dt>
                            Author: 
                        </dt>
                        <dd>
                            @Model.Author
                        </dd>
                        <dt>
                            Description: 
                        </dt>
                        <dd>
                            @Model.Description
                        </dd>
                        <dt>
                            Creation Date: 
                        </dt>
                        <dd>
                            @Model.CreationDate
                        </dd>
                        <dt>
                            Price: 
                        </dt>
                        <dd>
                            @Model.Price
                        </dd>
                        <dt>
                            PagesNumber: 
                        </dt>
                        <dd>
                            @Model.PagesNumber
                        </dd>
                        <dt>
                            Category Name: 
                        </dt>
                        <dd>
                            @Model.CategoryName.Name
                        </dd>
                    </dl>
                    <div>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                        <a  class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
   

</div>

