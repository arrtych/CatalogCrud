<h2>Books</h2>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="sr-only" for="serach">Search</label>
            <input type="text" class="form-control" ng-model="search[searchBy]" placeholder="Search">
        </div>
    </div>
    <div class="col-md-6">
        @if (TempData["message"] != null)
        {
            <div class="alert bg-info alert-dismissible">
                @TempData["message"]
            </div>
        }


    </div>


</div>   

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive table-st">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="active">
                        <th>
                            CreationDate
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            PagesNumber
                        </th>
                        <th>
                            Category
                        </th>
                        <th></th>
                        <th></th>
                        <th>
                            <p>
                                <a asp-action="Create" class="btn btn-primary">Create New</a>
                            </p>
                        </th>


                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="b in Books | filter:search">
                        <td>
                            {{b.creationDate.replace("T", "-").substring(0, 19)}}
                        </td>
                        <td>
                            {{b.name}}
                        </td>
                        <td>
                            {{b.author}}
                        </td>
                        <td>
                            {{b.description}}
                        </td>

                        <td>
                            {{b.price}}
                        </td>
                        <td>
                            {{b.pagesNumber}}
                        </td>
                        <td>
                            {{b.categoryName.name}}
                        </td>
                        <td>
                            <a asp-action="Details" data-ng-href='Book/Details/{{b.id}}'>
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" data-ng-href='Book/Edit/{{b.id}}'>
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" data-ng-href='Book/Delete/{{b.id}}'>
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>
